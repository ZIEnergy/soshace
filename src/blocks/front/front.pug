mixin front(additionalClass)
  .front(class=additionalClass)
    +video
    .wrapper.front__wrapper
      +logo-animated('front__logo')
      h1.section-header.reveal Web Development Studio
      ul.front__about
        li.front__about-item.reveal--by-one We help create startups
        li.front__about-item.reveal--by-one We develop big and complex projects specializing on JavaScript / Node.js
        li.front__about-item.reveal--by-one We care about deadlines and do our work in full accordance with technical requirements
        li.front__about-item.reveal--by-one We support our projects and take responsibility for the result
      +button('front__button', 'reveal')