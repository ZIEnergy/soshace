mixin form(additionalClass)
  form.form(action="#", method="post", class=additionalClass)
    input.input.form__input(type="text", placeholder="Name", name="name")
    input.input.form__input(type="email", placeholder="E-mail", name="email")
    textarea.input.input--textarea.form__input(type="text", placeholder="Message", name="message")
    .form__upload
      .form__upload-icon.form__upload-icon--clip
      .form__upload-text max 10Mb
    button.button.form__button Discus a project